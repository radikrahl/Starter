{{#if image}}
    <img
        class="a-img {{class}}"
        srcset="{{img_url image size="s"}} 300w,
                {{img_url image size="m"}} 600w,
                {{img_url image size="l"}} 1000w,
                {{img_url image size="xl"}} 2000w"
        sizes="(max-width: 1000px) 400px, 700px"
        src="{{img_url image size="m"}}"
        alt="{{title}}"
    />
{{else}}
    <div class="a-img {{class}}">
        {{title}}
    </div>
{{/if}}