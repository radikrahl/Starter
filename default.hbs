<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{!-- <link rel="stylesheet" type="text/css" href="{{asset 'built/screen.css'}}" /> --}}
    <link rel="stylesheet" type="text/css" href="{{asset 'built/main.css'}}" />

    <title>{{meta_title}}</title>

    {{ghost_head}}
    {{!-- Outputs important meta data and settings, should always be in head --}}

</head>

<body class="{{body_class}}">
    <header id="" class="l-grid">
        <nav class="l-grid--wide navigation">
            <div class="navigation__logo">
                {{!-- <a class="" href="{{@site.url}}">
                    {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}" />
                    {{else}}
                    {{@site.title}}
                    {{/if}}
                </a> --}}
                <a class="" id="burger" role="button">
                    <div class="">
                        <div class=""></div>
                    </div>
                </a>
            </div>
            {{navigation}}
            <div class="navigation__social">
                <div class="">
                    {{#if @site.facebook}}
                    <a href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">{{> "atoms/icons/facebook"}}</a>
                    {{/if}}
                    {{#if @site.twitter}}
                    <a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">{{> "atoms/icons/twitter"}}</a>
                    {{/if}}
                    {{!-- <a href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" title="RSS" target="_blank"
                        rel="noopener">{{> "atoms/icons/rss"}}</a> --}}
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="">
        {{{body}}}
        {{!-- All content gets inserted here, index.hbs, post.hbs, etc --}}
    </main>

    <footer class="">
        <div class="l-container">
            <div class="">
                {{navigation}}
            </div>
            <div class="">
                Published with <a href="https://ghost.org" target="_blank" rel="noopener">Ghost</a>
            </div>
        </div>
    </footer>

    <script src="{{asset 'built/jquery-3.4.1.min.js'}}"></script>

    {{#if pagination.pages}}
    <script>
        var maxPages = parseInt('{{pagination.pages}}');
    </script>
    <script src="{{asset 'built/infinitescroll.js'}}"></script>
    {{/if}}

    <script>
        $(document).ready(function () {
            // Mobile Menu Trigger
            $('#burger').click(function () {
                $('body').toggleClass('gh-head-open');
            });
        });
    </script>

    {{#is "post, page"}}
