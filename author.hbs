{{!< default}}

<div class="">
    <div class="l-container">

        {{#author}}
        <header class="">
            {{#if profile_image}}
                <img class="" src="{{profile_image}}" alt="{{name}}" />
            {{/if}}

            <h1>{{name}}</h1>
            {{#if bio}}
                <p>{{bio}}</p>
            {{/if}}

            <div class="">
                <div class="">
                    {{#if website}}
                        <a href="{{website}}" target="_blank" rel="noopener">Website</a>
                    {{/if}}
                    {{#if twitter}}
                        <a href="{{twitter_url}}" target="_blank" rel="noopener">Twitter</a>
                    {{/if}}
                    {{#if facebook}}
                        <a href="{{facebook_url}}" target="_blank" rel="noopener">Facebook</a>
                    {{/if}}
                </div>
            </div>

            {{#if cover_image}}
                <img class="" src="{{cover_image}}" alt="{{name}}" />
            {{/if}}
        </header>
        {{/author}}

        <div class="">
        {{#foreach posts}}

            {{> "organisms/postCard"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>
